<?xml version="1.0" encoding="utf-8"?>
<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">
    <header
        android:fragment="com.example.preferenceactivitytest.PreferenceActivityTest$Prefs1Fragment"
        android:icon="@mipmap/ic_launcher"
        android:summary="设置应用的相关选项"
        android:title="程序设置选项" />
    <header
        android:fragment="com.example.preferenceactivitytest.PreferenceActivityTest$Prefs2Fragment"
        android:icon="@mipmap/ic_launcher"
        android:summary="设置显示界面的相关选项"
        android:title="界面选项设置">
        <!--        extra向Activity传入额外数据-->
        <extra
            android:name="website"
            android:value="www.baidu.com" />
    </header>
    <header
        android:icon="@mipmap/ic_launcher"
        android:summary="使用Intent启动某个Activity"
        android:title="使用Intent">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="www.baidu.com" />
    </header>
</preference-headers>